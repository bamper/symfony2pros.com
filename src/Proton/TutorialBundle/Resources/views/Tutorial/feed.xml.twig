<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
	xmlns:content="http://purl.org/rss/1.0/modules/content/"
	xmlns:wfw="http://wellformedweb.org/CommentAPI/"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
	xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
	>
    <channel>
	<title>Symfony2Pros.com</title>
	<atom:link href="{{ url('proton_tutorial_tutorials_feed') }}" rel="self" type="application/rss+xml" />
	<link>{{ url('proton_homepage') }}</link>
	<description></description>
	<language>en</language>
	<sy:updatePeriod>hourly</sy:updatePeriod>
	<sy:updateFrequency>1</sy:updateFrequency>
{% for tutorial in tutorials %}
            <item>
                <title>{{ tutorial.title }}</title>
                <link>{{ url('proton_tutorial_tutorials_show', {'slug': tutorial.slug}) }}</link>
                <comments>{{ url('proton_tutorial_tutorials_show', {'slug': tutorial.slug}) }}#comments</comments>
                <pubDate>{{ tutorial.createdat.format('D, d M y H:i:s O') }}</pubDate>
                <dc:creator>{{ tutorial.authorname }}</dc:creator>
                <guid isPermaLink="true">{{ url('proton_tutorial_tutorials_show', {'slug': tutorial.slug}) }}</guid>
                <description><![CDATA[{{ tutorial.description }}]]></description>
                <content:encoded><![CDATA[{{ tutorial.content|markdown }}]]></content:encoded>
            </item>
{% endfor %}
    </channel>
</rss>