{% block field_row %}
{% spaceless %}
    <div class="clearfix">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        <div class="input">
            {{ form_widget(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock %}

{% block textarea_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }} rows="15">{{ value }}</textarea>
{% endspaceless %}
{% endblock textarea_widget %}