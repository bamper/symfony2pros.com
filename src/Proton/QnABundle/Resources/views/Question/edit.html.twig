<form id="question-edit-form" class="form-stacked" action="{{ path('proton_qna_questions_edit', {'id': question.id}) }}" method="post" {{ form_enctype(form) }}>
    <div class="clearfix">
        {{ form_label(form.title) }}
        <div class="input">
            {{ form_errors(form.title) }}
            {{ form_widget(form.title, { 'attr': {'class': 'span9'}}) }}
        </div>
    </div>
    <div class="clearfix">
        {{ form_label(form.content) }}
        <div class="input">
            {{ form_errors(form.content) }}
            {{ form_widget(form.content, { 'attr': {'class': 'span9'}}) }}
        </div>
    </div>
    {{ form_rest(form) }}
</form>